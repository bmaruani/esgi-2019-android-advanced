<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".module.customview.CustomViewActivity"
        android:id="@+id/custom_view_container">

    <com.maruani.esgi.androidadvanced.module.customview.EmotionalFaceView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:borderColor="@color/colorPrimaryDark"
            app:state="sad"

    />

    <com.maruani.esgi.androidadvanced.module.customview.CustomComponent
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:src="@android:drawable/star_off"
            app:textColor="@color/colorPrimary"
            app:text="toto"/>

</LinearLayout>